<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ricky.encounterassistant.CharacterActivity"
    android:background="#ff404040">

    <TextView
        android:text="Name"
        android:id="@+id/character_nameTextView"
        android:minWidth="@dimen/character_left_column_minimum_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#ff000000"
        style="?android:listSeparatorTextViewStyle"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/large_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Init: 20"
        android:id="@+id/character_initiativeTextView"
        android:layout_above="@+id/character_ac"
        android:layout_toLeftOf="@+id/character_hp"
        android:layout_toStartOf="@+id/character_hp"
        android:layout_alignLeft="@+id/character_ac"
        android:layout_alignStart="@+id/character_ac"
        android:gravity="center_horizontal" />

    <ImageView
        android:contentDescription="@string/character_avatar_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/character_avatarImageView"
        android:src="@drawable/skull"
        android:layout_toRightOf="@+id/character_nameTextView"
        android:layout_toEndOf="@+id/character_nameTextView"
        android:layout_alignTop="@+id/character_nameTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Armor Class: 20"
        android:id="@+id/character_ac"
        android:layout_below="@+id/character_hp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fortitude: 20"
        android:id="@+id/character_fo"
        android:layout_below="@+id/character_hp"
        android:layout_toRightOf="@+id/character_ac"
        android:layout_toEndOf="@+id/character_ac"
        android:textColor="#ff000000"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reflex:20"
        android:id="@+id/character_re"
        android:layout_toStartOf="@+id/character_fo"
        android:layout_toLeftOf="@+id/character_fo"
        android:textColor="#ff000000"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/character_ac"
        android:layout_alignLeft="@+id/character_ac"
        android:layout_alignStart="@+id/character_ac" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Will: 20"
        android:id="@+id/character_wi"
        android:layout_below="@id/character_fo"
        android:layout_toRightOf="@+id/character_re"
        android:layout_toEndOf="@+id/character_re"
        android:textColor="#ff000000"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HP/HP"
        android:id="@+id/character_hp"
        android:layout_below="@+id/character_avatarImageView"
        android:layout_alignLeft="@+id/character_avatarImageView"
        android:layout_alignStart="@+id/character_avatarImageView"
        android:layout_alignRight="@+id/character_avatarImageView"
        android:layout_alignEnd="@+id/character_avatarImageView"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textStyle="bold" />

</RelativeLayout>
