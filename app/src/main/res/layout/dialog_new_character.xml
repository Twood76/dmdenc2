<?xml version="1.0" encoding="utf-8"?>

<GridLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="#ff303030">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:layout_row="0"
        android:layout_column="0"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/new_character_nameEditText"
        android:layout_row="0"
        android:layout_column="1"
        android:textColor="#ffc0c0c0"
        android:textCursorDrawable = "@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Max Health"
        android:layout_row="1"
        android:layout_column="0"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/new_character_healthEditText"
        android:layout_row="1"
        android:layout_column="1"
        android:textColor="#ffffffff"
        android:textCursorDrawable = "@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Initiative"
        android:layout_row="2"
        android:layout_column="0"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/new_character_initEditText"
        android:layout_row="2"
        android:layout_column="1"
        android:textColor="#ffffffff"
        android:textCursorDrawable = "@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Armor Class"
        android:layout_row="3"
        android:layout_column="0"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/new_character_acEditText"
        android:layout_row="3"
        android:layout_column="1"
        android:textColor="#ffffffff"
        android:textCursorDrawable = "@null"/>

</GridLayout>