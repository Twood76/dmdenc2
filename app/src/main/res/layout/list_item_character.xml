<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ff303030"
    android:clickable="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_avatar_avatarImageView"
        android:src="@drawable/skull"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Character Name"
        android:id="@+id/list_item_character_nameTextView"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_item_avatar_avatarImageView"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initiative Roll"
        android:id="@+id/list_item_character_initiativeTextView"
        android:layout_alignBottom="@+id/list_item_character_nameTextView"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC"
        android:id="@+id/list_item_character_acTextView"
        android:layout_below="@+id/list_item_character_nameTextView"
        android:layout_toRightOf="@+id/list_item_avatar_avatarImageView"
        android:layout_toEndOf="@+id/list_item_avatar_avatarImageView"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HP"
        android:id="@+id/list_item_character_hpTextView"
        android:textStyle="bold"
        android:layout_above="@+id/list_item_character_acTextView"
        android:layout_toRightOf="@+id/list_item_character_nameTextView"
        android:layout_toEndOf="@+id/list_item_character_nameTextView"
        android:textColor="#ff000000" />

</RelativeLayout>